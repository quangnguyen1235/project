
@model Employee;
@{ 
    ViewBag.title("Remove employee");
}
<div class="modal" id="confirmModal">
    <div class="modal-dialog modal-static">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Confirm
                </h5>
            </div>
            <div class="modal-body">
                <p>
                    Would you like to confirm this action?
                </p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary mx-2" asp-controller="Home" asp-action="Remove" asp-route-id="@Model.Id">
                    Yes
                    <i class="fa fa-check" aria-hidden="true"></i>
                </a>
                <button class="btn btn-danger mx-2" data-dismiss="modal">
                    No
                    <i class="fa fa-close"></i>
                </button>
            </div>
        </div>
    </div>
</div>