<div class="card my-2">
    <div class="card-header" style="background-color: #FED770 ">
        <h4 style="color:#076A67">@Model.product.ProductName</h4>
    </div>
    <div class="card card-body">
        <div class="row">
            <div class="col-4">
                <img src="@avaPath" class="card-img rounded-left" alt="@Model.product.ProductName" />
            </div>
            <div class="col-8">
                <hr />
                <div class="row">
                    <div class="col-3">
                        <h4>Producer: </h4>
                    </div>
                    <div class="col-9">
                        <h5>@Model.product.ProductProducerName</h5>
                    </div>

                </div>
                <hr />
                <div class="row">
                    <div class="col-3">
                        <h4>Type: </h4>
                    </div>
                    <div class="col-6">
                        <h5>@Model.product.ProductTypeName</h5>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-3">
                        <h4>Price: </h4>
                    </div>
                    <div class="col-9">
                        <h5>@Model.product.ProductPrice.ToString("N0")₫</h5>
                    </div>
                </div>
                <hr />
                <div class="row-cols-lg-1 mx-auto text-center">
                    <input type="number" id="quantity'+ value.id +'" class="input-text qty text" step="1" min="1" max="9999" name="quantity" value="1" title="SL" size="1" inputmode="numeric">
                    <button style="width:auto" class="btn btn-primary">Add To Cart<i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="card-subtitle my-auto">
            <h6>@Model.product.FullDescription</h6>
        </div>
    </div>
</div>