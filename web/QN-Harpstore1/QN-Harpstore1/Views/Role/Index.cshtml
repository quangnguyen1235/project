@{
    ViewBag.Title = "Role Management";
}
@model IEnumerable<IdentityRole>;
<div class="container">
    <h4 class="mx-2">@ViewBag.Title</h4>
    <a class="btn btn-success mx-2" asp-controller="Role" asp-action="Create">Create</a>
    &NonBreakingSpace;
    <table class="table table-hover mt-3" id="tbProducts">
        <thead class="thead-dark">
            <tr>
                <th>#ID</th>
                <th>Role Name</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                       
                        <td>@item.Name</td>
                        <td class="text-right">
                            <a title="edit product" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id"><i class='fa fa-edit'></i></a>
                            <a title="remove product" asp-controller="Role" asp-action="Remove" asp-route-id="@item.Id"><i class='fa fa-trash'></i></a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>