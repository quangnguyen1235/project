@model HarpstoreWeb.Models.Product.ProductView

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvataPath)
        </dt>
        <dd class="col-sm-10">
            <img src=' @Model.AvataPath ' width='100px' height='70px' />
            @*@Html.DisplayFor(model => model.AvataPath)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProducerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProducerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-warning" onclick="goBack()">Go Back</button>
</div>
@section Scripts{
    <script>
        //$(document).ready(function () {
        //    function goBack() {
        //        window.history.back();
        //    }
        //});
        function goBack() {
            window.history.back();
        }
    </script>
}
