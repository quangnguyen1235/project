@{
    ViewBag.Title = "ListProType";
}
<div class="">
    <h1 class="display-4">@ViewBag.Title</h1>
    <div class="row">
        <div class="col-12 mb-3">
            <a href="javascript:void(0);" class="btn btn-info"
               onclick="home.openAddEditdepartment()">Create</a>
        </div>
    </div>
    <table id="tbProType" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ProTypeId</th>
                <th>ProType Name</th>
                <th>Product</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProducerId</td>
                        <td>@item.ProducerName</td>
                        <td>Bla</td>
                        <td>Bla</td>
                    </tr>
                }*@
        </tbody>
    </table>
    <!-- Modal -->
    <div id="addEditdepartment" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <form id="frmAddEditdepartment">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Department</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <input hidden id="DepartmentId" name="DepartmentId">
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-3">
                                <label>Department Name</label>
                            </div>
                            <div class="col-9">
                                <input type="text" id="DepartmentName" name="Department Name" class="form-control" data-rule-required="true">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        <a href="javascript:;" class="btn btn-danger" onclick="home.save()">Save</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/protype.js" asp-append-version="true"></script>
}